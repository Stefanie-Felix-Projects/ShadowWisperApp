<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Profilbild -->

    <!-- Nachrichtentext -->

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hex17jpg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079"
        app:layout_constraintWidth_min="40dp" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/profilepic"
        android:fontFamily="@font/rajdhani"
        android:padding="40dp"
        android:paddingStart="18dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:text="Captain, die Sternenfregatte 'Aurora' hat den Hyperraumkorridor erfolgreich durchquert und ist nun im Orbit um den Planeten Elysia. Die Atmosphäre ist dicht und voller biolumineszenter Nebel, wie wir es in den alten Legenden über die verlorene Stadt der Eldarin gehört haben. Unser Scanner zeigt ungewöhnliche Energiesignaturen unter der Oberfläche, möglicherweise Überreste einer uralten Technologie. Ich empfehle, ein Außenteam vorzubereiten. Es könnte unsere einzige Chance sein, den verschollenen Artefaktkern zu bergen, bevor die Verlorenen Jäger des Schattenreichs uns aufspüren. Die Zeit drängt, Captain. Möge das Licht der alten Sterne uns leiten."
        android:textColor="@color/colorOnCustomColor1"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/textViewTimestamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/imageViewProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani"
        android:text="10:30 AM"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/imageViewProfile"
        app:layout_constraintTop_toBottomOf="@id/textViewMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>