<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shadowwisper.ui.theme.ui.CharacterdetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="270dp"
                    android:background="@drawable/chatpicture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hex17jpg" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani_semibold"
                android:text="Name"
                android:textColor="@color/md_theme_primaryFixed"/>

            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani"
                android:hint="Input"
                android:textColor="@color/colorOnCustomColor1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rajdhani_semibold"
                android:text="Story"
                android:textColor="@color/md_theme_primaryFixed"/>

            <EditText
                android:id="@+id/inputStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani"
                android:hint="Input"
                android:textColor="@color/colorOnCustomColor1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rajdhani_semibold"
                android:text="Rasse"
                android:textColor="@color/md_theme_primaryFixed"/>

            <EditText
                android:id="@+id/inputRasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani"
                android:hint="Input"
                android:textColor="@color/colorOnCustomColor1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rajdhani_semibold"
                android:text="Skills"
                android:textColor="@color/md_theme_primaryFixed"/>

            <EditText
                android:id="@+id/inputSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani"
                android:hint="Input"
                android:textColor="@color/colorOnCustomColor1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/rajdhani_semibold"
                android:text="Equipment"
                android:textColor="@color/md_theme_primaryFixed"
                />

            <EditText
                android:id="@+id/inputEquipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rajdhani"
                android:hint="Input"
                android:textColor="@color/colorOnCustomColor1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:text="ZurÃ¼ck" />

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:text="Speichern" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


