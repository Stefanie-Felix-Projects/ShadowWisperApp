<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewMessageOutgoing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/profilepic"
        android:fontFamily="@font/rajdhani"
        android:padding="40dp"
        android:paddingStart="18dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Verstanden, Lieutenant. Das Außenteam wird sofort vorbereitet. Senden Sie eine vollständige Analyse der Energiesignaturen an die taktische Konsole. Die Eldarin-Technologie könnte der Schlüssel zur Aktivierung des Artefaktkerns sein, aber wir dürfen nicht unvorbereitet sein, falls es eine Falle der Verlorenen Jäger ist. Stellen Sie sicher, dass die Tarnfeldgeneratoren unseres Schiffs aktiviert bleiben. Wir müssen im Schatten bleiben, bis wir sicher sind, dass keine Bedrohung in der Nähe ist. Der Countdown für den Außeneinsatz beginnt jetzt. Halten Sie die Kommunikationskanäle offen und bereiten Sie sich auf alle Eventualitäten vor. Aurora, Ende."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/textViewTimestampOutgoing"
        app:layout_constraintEnd_toStartOf="@id/imageViewProfileOutgoing"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTimestampOutgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani"
        android:text="10:30 AM"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewProfileOutgoing"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMessageOutgoing" />

    <ImageView
        android:id="@+id/imageViewProfileOutgoing"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hex17jpg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:layout_constraintWidth_min="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>